    <head>
    <title>project two</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <!-- google fonts "Montserrat" and "Lato" -->
    <link rel="stylesheet" type="text/css" href="/css/styleCategory.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/main.js"></script>
</head>
<!-- Add scrollspy to <body> to automatically update navbar links when scrolling -->

<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container col-md-12 col-sm-12 col-xs-12">
            <span class="collapse navbar-collapse" id="myNavbar">
                <ul class="col-md-2 col-sm-3 col-xs-3 nav navbar-nav text-center">
                <!-- homepage button -->
                    <span class="form-control">
                        <a href="/home">
                        <p><strong>Homepage</strong></p></a>
                     </span>
                </ul>
              <!-- displayed name -->
              <span class="col-md-3 col-sm-1 col-xs-1"></span>
                    <span class="col-md-3 col-sm-3 col-xs-3">
                        <h1>{{catName}}</h1>
                    </span>
            <!-- search bar -->
            <span class= "col-md-2 col-sm-2 col-xs-2 nav navbar-nav text-center">
                <input type="text" class="form-control" placeholder="Search">
                </span>
            <span class= "col-md-2 col-sm-2 col-xs-2 nav navbar-nav">
                <a href="/search"><button type="submit" class="btn btn-default" name="search">Submit</button></a>
            </span>
            </span>
        </div>
    </nav>




    <div class="jumbotron text-center" id="background">
        <ul class = "category-name-container"></ul>
    </div>
    <br>
    <div class="row text-center">
        <div class="col-sm-3">
        </div>
        <form class="create-update-form" action="/post" method="POST">
        <div class="col-sm-6">                       
            <div class="form-group text-left">
                <label for="title">Name of {{catName}}:</label>
                <input type="text" class="form-control" id="userImputTitle" name="title">
            </div>
            <div class="form-group text-left">
                <label for="summary">Summary:</label>
                <input type="text" class="form-control" id="userImputSummary" name="summary">
                <input type="hidden" class="form-control" id="catName" name="categName" value="{{catName}}">
                <input type="hidden" class="form-control" id="authId" name="authId">
            </div>
            <button type="submit" id= "submitTitleSummary" class="btn btn-default">Create</button>
            <!-- this will prepend the recently submitted name/summary to the CategoryNameData page -->
        </div>
</form>

        <div class="col-sm-3">
        </div>
    </div>
    <div class="container-fluid bg-grey">
        <div class="row text-center">
            <div class="col-sm-2"></div>

            <!-- every time we add a new post, we need to make jquery post the following below -->
            <div class="col-sm-8">

                     {{#each data}}
                     <!-- title and summary grabbed from html-routes -->
                <h2><strong>{{this.title}} </strong></h2>
                <h4><strong>{{this.summary}}</strong></h4>
                    <br>
                    {{/each}}
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
    <br>
    <footer class="footer text-center">
    </footer>

    <script>

    // change background image according to the category
        $('#background').css('background-image', 'url("/css/{{catName}}.jpg")');
        $('#authId').val(localStorage.authorId);

            //if title empty, alert pops up 
        $('#submitTitleSummary').click(function(){
            if ($.trim($('#userImputTitle').val()) == '') {
                alert('imput a title');
                }
        });
            //if summary empty, alert pops up 
        $('#submitTitleSummary').click(function(){
            if($.trim($('#userImputSummary').val()) == ''){
                alert('imput a summary');
                }
        });


    </script>
    </body>

</html>